generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Type {
  CREDIT
  DEBIT
}

model IssuerIdentificationNumber {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  type Type
  iinStart String
  iinEnd String?
  isPrepaid Boolean
  numberLength Int
  brand String?
  countryCode String
  
  cardScheme CardScheme @relation(fields: [cardSchemeId], references: [id])
  cardSchemeId String @db.ObjectId

  bank Bank @relation(fields: [bankId], references: [id])
  bankId String @db.ObjectId

  @@map(name : "iins")
}

model CardScheme {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  issuerIdentificationNumbers IssuerIdentificationNumber[]

  @@map(name : "card_schemes")
}

model Bank {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  url String

  issuerIdentificationNumbers IssuerIdentificationNumber[]

  @@map(name : "banks")
}